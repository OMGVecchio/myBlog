{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "classic",
        // "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "exclude": [
        // "config",
        // "filters",
        // "lib",
        // "node_modules",
        // "static",
        // "routes",
        // "webpack",
        // "utils",
        // "app.js",
        // "webpack.config.js"
    ],
    "include": [
        "src/**/*"
    ],
    "types": [
        "typePatches"
    ]
}
