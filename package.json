{
  "name": "vecchio-blog",
  "version": "1.0.0",
  "description": "simple blog with react and koa2",
  "main": "app.js",
  "repository": "git@github.com:OMGVecchio/myBlog.git",
  "author": "vecchio <weichao@zbj.com>",
  "license": "MIT",
  "eslintConfig": ".eslintrc",
  "eslintIgnore": [
    "src",
    "static"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development node app.js",
    "start": "cross-env NODE_ENV=production node app.js",
    "pm2-dev": "pm2 start app.json",
    "pm2-start": "pm2 start app.json --env production",
    "build": "cd next && next build && cd ..",
    "release": "npm run build && npm run pm2-start",
    "smplugin": "cd next && cross-env NODE_ENV_ANALYZER=smplugin next build && cd ..",
    "baplugin": "cd next && cross-env NODE_ENV_ANALYZER=baplugin next build && cd .."
  },
  "dependencies": {
    "antd": "3.23.4",
    "classnames": "^2.2.6",
    "highlight.js": "^9.13.1",
    "immutable": "^3.8.2",
    "ioredis": "^3.2.1",
    "jsonwebtoken": "^8.3.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.1.0",
    "koa-multer": "^1.0.2",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.1",
    "lowdb": "^1.0.0",
    "marked": "^0.5.2",
    "next": "9.0.6",
    "next-redux-saga": "^3.0.0-beta.1",
    "next-redux-wrapper": "3.0.0-alpha.0",
    "qiniu": "^7.2.1",
    "react": "^16.0.0",
    "react-ace": "^6.1.1",
    "react-codemirror": "^1.0.0",
    "react-dom": "^16.0.0",
    "react-markdown": "^4.0.3",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-immutable": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "sharp": "^0.21.1",
